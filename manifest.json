{
  "manifest_version": 2,

  "name": "Hands-free recipes",
  "description": "This extension enables Chrome to read recipes to you when asked",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Start listening"
  },
  "permissions": [
    "tts"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["read.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }

}
